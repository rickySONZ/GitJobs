<%= render partial: 'errors/errors', locals: {model: @review} %>
<%= form_with(model: [@job, @review]) do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %><br>
    <%= f.label :content %><br>
    <%= f.text_area :content, class: "form-control"%><br>
    <% if @job.nil? %>
    <br><%= f.collection_select(:job_id, Job.all, :id, :title,{:prompt => "Select Job For This Review"}, {:class => 'form-control'})%><br><br>
    <% end %>
    <%= f.submit %>
    <% end %>